# Original source: https://github.com/SBoudrias/dotfiles/blob/master/shell/curlrc
# cURL default configuration file
# http://curl.haxx.se/docs/manpage.html

# Limit the time (in seconds) the connection to the server is allowed to take
connect-timeout = 30

# Follow HTTP redirects
location

# When following a redirect, automatically set the previous URL as referer
referer = ";auto"

# Show error messages
show-error

# Do not show the progress meter
silent

# Send a fake UA string for the HTTP servers that sniff it
user-agent = "Mozilla/5.0 Gecko"
